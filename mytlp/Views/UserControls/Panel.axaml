<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="mytlp.Views.UserControls.Panel" 
             x:DataType="vm:MainWindowViewModel"
             xmlns:vm="using:mytlp.ViewModels">
             

    <StackPanel Spacing="8" Margin="25">
  
        <Label Content="Log:" />
        
        <Button Content="Delete selected profile" 
                Command="{Binding OnDeleteProfile }"
                IsEnabled="{Binding SelectedBatteryProfile, Converter={x:Static ObjectConverters.IsNotNull}}"/>
        
        <Button Content="Charge once to 100%"/>
        
        <Button Content="Save All + Exit" Command="{Binding OnSaveProfiles }"/>
        
        <Button Content="Reload Profiles" Command="{Binding OnLoadProfiles }"/>
        
        <Button Content="Set Chargelimits [65/70]" Command="{Binding OnSetChargeLimits }"/>
        
        <!-- <Button Content="Reload Profiles" Command="{Binding OnReloadProfiles }"/> -->
        
    </StackPanel>

</UserControl>