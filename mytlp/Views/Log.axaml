<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="mytlp.Views.UserControls.Log" 
             xmlns:vm="using:mytlp.ViewModels"
             x:DataType="vm:MainWindowViewModel"
             xmlns:local="clr-namespace:mytlp.Views.UserControls">

    <StackPanel Spacing="8" Margin="25">
  
        <Label Content="Log:" 
               Padding="5" Margin="10"/>
        <Border Background="#181818"
                BorderBrush="SlateGray"
                BorderThickness="0"
                CornerRadius="10"
                Padding="5" Margin="10">
        <!-- <TextBlock Name="Log" Width="600" Height="400"  Background="#181818"   VerticalAlignment="Top" > -->
        <!--                 -->
        <!-- </TextBlock> -->
        <TextBox Name="LogTextBoxName" 
                 Width="600" Height="400"  CornerRadius="6"
                 Background="#181818"   VerticalAlignment="Top" 
                 TextWrapping="Wrap"
                 CaretIndex="1000"
                 Text ="{Binding Path=  LogText ,Mode=TwoWay }">
                       
        </TextBox>
        </Border>
    </StackPanel>

</UserControl>